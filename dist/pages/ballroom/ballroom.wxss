/* pages/ballroom/ballroom.wxss */

/* @import '../../templates/remind-item/remind-reserveddate-item.wxss'; */

page {
  height: 100%;
  width: 100%;
}

.ballroomBgView {
  height: 100%;
  width: 100%;
  background-color: black;
}
.room-img {
  height: 100%;
  width: 100%;
}

.imgSwiper {
  height: 75%;
}

.room-info {
  color: white;
  padding: 10px;
}
.room-info-text {
  font-size: 13px;
  color: #999999;
}
.room-info-text view {
  display: inline-block;
}

.foot-view {
  color: white;
  font-size: 28rpx;
  text-align: center;
  width: 100%;
}

.comment-view {
  padding: 0 30rpx;
}
.comment{
  width: 55rpx;
  height: 55rpx;
}

.foot-btn {
  border: 1px white solid;
  border-radius: 7px;
  margin: 0 20rpx;
  padding: 0 20rpx;
  height: 60rpx;
  line-height: 60rpx;
}

/* 桌数 */
.table-bg-view {
    width: 100%;
    height: 100%;
    background-color: rgba(1,1,1,0.6);
    position: fixed;
    bottom: 0;
    z-index: 10;
}
.table-view {
    width: 85%;
    background-color: white;
    border-radius: 10rpx;
    margin: 45% auto;
    padding: 20rpx 20rpx 0;
}

.table-title-view {
    text-align: center;
    padding: 10rpx;
}
.table-view .body-view {
    margin-bottom: 30rpx;
}


/* 弹窗 */
.selectDate-bgview {
    width: 100%;
    height: 100%;
    background-color: rgba(1,1,1,0.6);
    position: fixed;
    bottom: 0;
    z-index: 10;
}
.datepicker-view {
    width: 90%;
    background-color: white;
    border-radius: 10rpx;
    margin: 15% auto;
    font-size: 30rpx;
}

.datepicker-view .title {
    padding: 20rpx 30rpx;
    font-size: 30rpx;
}
.datepicker-view .title radio-group {
  display: inline-block;
}
.datepicker-view .title input{
    border-bottom: 1px #E5E5E5 solid;
    display: inline-block;
    font-size: 30rpx;
}
.picker {
  margin-bottom: 30rpx;
}
.picker picker-view {
  width: 100%; 
  height: 150px;
}
.picker-btns {
  bottom: 0;
  margin-top: 20rpx;
  padding: 20rpx 0;
  border-top: 1px #f1f1f1 solid;
  text-align: center;
}
.picker-view {
	color:#FF7CA0;
	text-align: center;
}

.reserved-text {
  color:#F15A4A;
  margin-left: 10rpx;
}

.table-text {
  float: left;
}

.table-slider-view {
  margin-left: 20%;
}
.table-slider-view slider{
  margin: 0;
}