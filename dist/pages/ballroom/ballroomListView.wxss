/* pages/ballroom/allBallroomList.wxss */

.body {
  margin: 20rpx 0;

}

/* little-text */
.lit-text {
  color: rgba(153,153,153,1);
  font-size: 26rpx;
}

/* little-cell */
.little-cell {
  padding: 30rpx 20rpx;
  background-color: white;
  border-bottom: 1px #f1f1f1 solid;
  font-size: 16px;
}
.little-cell-left-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
  float: left;
  margin-top: 3px;
}
.little-cell-right-icon-view {
  float: right;
  margin-top: 3px;
}
.little-cell-right-icon-view image {
  width: 30rpx;
  height: 30rpx;
  margin-left: 20rpx;
}

/* middle-cell */
.middle-cell {
  padding: 20rpx 20rpx;
  background-color: white;
  border-bottom: 1px #f1f1f1 solid;
  font-size: 30rpx;
}
.middle-cell-left-img {
  width: 160rpx;
  height: 128rpx;
  float: left;
}
.middle-cell-middle-text {
  display: inline-block;
  margin-left: 40rpx;
}
.middle-cell-middle-text text {
  display: block;
}
.middle-cell-right-button {
  float: right;
  color: white;
  background-color: #D3AA6A;
  border-radius: 15px;
  height: 50rpx;
  line-height: 50rpx;
  width: 140rpx;
  text-align: center;
  margin-top: 40rpx;
}
