/* pages/weddingTalent/clearing.wxss */

.body {
  margin-bottom: 120rpx;
}

.cellImg {
  width: 150rpx;
  height: 150rpx;
  margin-right: 20rpx;
  position: absolute;
}
/* 待付款 */
.payment-cell {
  background-color: white;
  width: 95%;
  padding: 2.5%;
  margin-bottom: 20rpx;
  position:relative;
  border-top: 1px #f5f5f5 solid;
  border-bottom: 1px #f5f5f5 solid;
}
.payment-cell .text {
  display: inline-block;
  width: 65%;  
  padding-left: 240rpx;
}
.checkbox {
    position: absolute;  
    margin-top: -5rpx; 
}
.payment-cell .cellImg {
    margin-left: 70rpx;
}

/* 结算 */
.settlement-view {
  background-color: white;
  border: 1px #dddddd solid;
  text-align: right;
  line-height: 100rpx;
  height: 100rpx; 
  bottom: 0;
  color: black;
}
.settlement-btn {
  background-color: #F15A4A;
  color: white;
  padding: 0 40rpx;
  margin-left: 20rpx;  
}
.settlement-view .price {
  display: inline-block;
  color: #FF0000;
  font-size: 14px;
  text-align: right; 
}
.settlement-checkbox {
   float: left; 
   margin-left: 20rpx;
}

