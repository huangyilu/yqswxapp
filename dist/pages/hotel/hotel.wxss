/**index.wxss**/
@import '../../templates/scorestart/scorestart.wxss';

/* little-text */
.lit-text {
  color: rgba(153,153,153,1);
  font-size: 26rpx;
}

/* middle-cell */
.middle-cell {
  padding: 20rpx 20rpx;
  background-color: white;
  border-bottom: 1px #f1f1f1 solid;
  font-size: 30rpx;
}
.middle-cell-left-img {
  width: 160rpx;
  height: 128rpx;
  float: left;
}
.middle-cell-middle-text {
  display: inline-block;
  margin-left: 40rpx;
}
.middle-cell-middle-text text {
  display: block;
}
.middle-cell-right-button {
  float: right;
  color: white;
  background-color: #D3AA6A;
  border-radius: 15px;
  height: 50rpx;
  line-height: 50rpx;
  width: 140rpx;
  text-align: center;
  margin-top: 40rpx;
  font-size: 32rpx;
}

/* 头部 */
.header {
  background-color: white;
  width: 100%;
  height: 350rpx;
}
.header-img {
  width: 100%;
  height: 350rpx;
}
.imgSwiper {
  height: 350rpx;
  width: 100%;
}
.header-text {
  color: white;
  height: 135rpx;
  /* margin-top: -140rpx; */
  padding: 0 2.5%;
  font-size: 18px;
  width: 95%;
  display: block;
  background-color: rgba(1,1,1,0.4);
  position: absolute;
  top: 215rpx;
}
.header-text .text {
  color: #dddddd;
  font-size: 24rpx;
  overflow:hidden;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
}

/* 描述 */
.hotel-description view{
  width: 65%;
  float: right;
  margin-top: -10rpx; 
  display: inline-block;
  font-size: 24rpx;
  color: rgba(153,153,153,1);
}
.hotel-description view text {
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
} 

.hotel-ballroom {
  background-color: white;
  margin: 20rpx 0;
}
