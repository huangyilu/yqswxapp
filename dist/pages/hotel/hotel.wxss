.hotel-wedding-menu {
  margin-bottom: 20rpx;
}

.comment-text {
    margin-right: 10rpx;
    font-size: 30rpx;
    color: #dddddd;
}
.hotelscore {
    font-size: 34rpx;
    color: #FC992C;
}
.score-view {
    float: right;
}
.phone-call-icon {
    width: 60rpx;
    height: 60rpx;
    float: right;
    margin-right: 20rpx;
    margin-top: 20rpx;
    position: absolute;
    margin-left: 90%;
    top: 0;
}

/* 菜品 横向滑动 */
.scroll-view_H {
  padding: 0rpx 2.5% 20rpx;
  width: 95%;
  height: 200rpx;
  background-color: white;
}
.scroll-h-title {
  padding: 20rpx;
  background-color:white;
  font-size: 30rpx;
}
.scroll-h-item {
  width: 320rpx;
  height: 200rpx;
  margin-right: 20rpx;
  display: inline-block;
}
.scroll-h-item .bg-img {
  width: 320rpx;
  height: 200rpx;
}
.scroll-h-item .text-view {
  width: 300rpx;
  height: 50rpx;
  position: absolute;
  background-color: rgba(1,1,1,0.4);
  color: white;
  font-size: 28rpx;
  line-height: 50rpx;
  padding: 0 10rpx;
  margin-top: -60rpx;
}
.scroll-h-item .text-view .left-text {
  float: left;
}
.scroll-h-item .text-view .right-text {
  float: right;
}

/* 宴会庆典 横向滑动 */
.celebration-scroll-view_H {
  padding: 0rpx 2.5% 20rpx;
  width: 95%;
  height: 420rpx;  
  background-color: white;
  white-space: nowrap;
}
.celebration-scroll-h-item {
  width: 300rpx;
  height: 380rpx; 
  margin-right: 20rpx;
  display: inline-block;
  background-color: white;
  border: 1px #dddddd solid;
  font-size: 32rpx;
  padding: 10rpx;
}
.celebration-scroll-h-item .bg-img {
  width: 300rpx;
  height: 250rpx;
}
.celebration-scroll-h-item .text-view {
  width: 300rpx;
  height: 45rpx;
  font-size: 26rpx;
}
.celebration-scroll-h-item .text-view .left-text {
  overflow: hidden; 
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:1;
}
.celebration-scroll-h-item .text-view .right-text {
  margin-left: 20rpx;
  font-size: 26rpx;
  color: #F15A4A;
}
.celebration-scroll-h-item .style-view {
  margin: 10rpx 0;
}
.celebration-scroll-h-item .style-view .style-icon {
  border: 1px #d3aa6a solid;
  color: #666;
  padding: 6rpx 15rpx;
  font-size: 24rpx;
  border-radius: 30rpx;
}

/* 婚礼人才 */
.hotel-talent-menu {
  margin-bottom: 20rpx;
}
.talent-scroll-view_H {
  padding: 0rpx 2.5% 20rpx;
  width: 95%;
  height: 400rpx;  
  background-color: white;
  white-space: nowrap;
  border-bottom: 1px #DDDDDD solid;
}
.talent-scroll-h-item {
  width: 300rpx;
  height: 360rpx;  
  margin-right: 20rpx;
  display: inline-block;
  background-color: white;
  border: 1px #dddddd solid;
  font-size: 26rpx;
  padding: 10rpx;
  text-align: center;
}
.talent-scroll-h-item .head-img {
  margin-top: 20rpx;
}
.talent-scroll-h-item .head-img image{
  width: 150rpx;
  height: 150rpx;
  margin: auto;
  border-radius: 20rpx;
  border: 1px #f5f5f5 solid;
}
.talent-scroll-h-item .btn-view {
  color: white;
  background-color: #D3AA6A;
  border-radius: 15px;
  height: 50rpx;
  line-height: 50rpx;
  width: 150rpx;
  text-align: center;
  font-size: 28rpx;
  margin: 20rpx auto;
}
.talent-scroll-h-item .text-view text{
  color: #999999;
  font-size: 24rpx;
  margin: 20rpx;
}