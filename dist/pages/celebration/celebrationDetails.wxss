/* pages/celebration/celebrationDetails.wxss */

page {
  width: 100%;
}
.body {
  margin-bottom: 110rpx;
  width: 100%;
}
/* 头部 */
.celeTitle {
    padding: 20rpx;
    background-color: white;
    font-size: 36rpx;
    margin-bottom: 20rpx;
    border-bottom: 1px #dddddd solid;
}
.ttle {
    font-size: 30rpx;
    color: #999999;
}
.txt {
    color: #666666;
}

/* 效果展示 */
.celeShow {
    background-color: white;
    padding-bottom: 20rpx;
    margin-bottom: 20rpx;
}
.show-img {
    width: 95%;
    height: 450rpx;
    padding: 20rpx 20rpx 0;
}
.show-img image {
    width: 100%;
    height: 100%;
}

/* 详情 */
.detail-title {
    padding: 20rpx;
}
.celeDetails {
    background-color: white;
    font-size: 28rpx;
}
.details {
    background-color: white;
    padding: 0 20rpx 0;
}
.details .icon {
    width: 10%;
    padding: 20rpx 0;
}
.details .icon image{
    width: 60rpx;
    height: 60rpx;
}
.details .desc {
    width: 90%;
    border-bottom: 1px #dddddd solid;
    padding: 20rpx 0;
}

.appointment-view {
    bottom: 0;
    background-color: white;
    border-top: 1px #dddddd solid;
}
.comment-icon {
    width: 60rpx;
    height: 60rpx;
    margin: 20rpx;
    float: left;
}
.appointment-btn {
    padding: 10rpx 0;
    background-color: #F15A4A;
    color: white;
    margin: 20rpx;
    border-radius: 15rpx;
}

/* 弹窗 */
.checkbox-view {
  padding: 20rpx;
  font-size: 28rpx;
}
.select-package {
    width: 100%;
    height: 100%;
    background-color: rgba(1,1,1,0.5);
    position: fixed;
    bottom: 0;
    z-index: 10;
}
.select-view {
    width: 95%;
    margin: 40% 2.5%;
    background-color: white;
}
.btn-view {
    border-top: 1px #dddddd solid;
    padding: 20rpx;
    font-size: 28rpx;
}
.cancel-btn {
    width: 65%;
    height: 70rpx;
    line-height: 70rpx;
    background-color: #dddddd;
    border-style: none;
    font-size: 28rpx;
}
button::after {
  border-style: none;
}
.define-btn {
    width: 65%;
    height: 70rpx;
    line-height: 70rpx;
    background-color: #F15A4A;
    color: white;
    font-size: 28rpx;
}
.stage-view { 
   padding:20rpx 0 0;
   font-size: 28rpx;
}

/* 背景框框 */
.detail-bg-view {
    position:relative;
    margin-bottom: 40rpx;
}
.boder-title-view {
    background-color:#d3aa6a;
    color:white;
    position:absolute;
    width:32rpx;
    padding:20rpx 15rpx;
    font-size:32rpx;
    top: 25%;
}
.boder-top-view {
    background: rgba(0,0,0,0);
    position: absolute;
    border: 1px solid #999999;
    top: 0;
    bottom: 40rpx;
    /* left: 6%;
    right: 16%; */
}
.boder-bottom-view {
    background:rgba(0,0,0,0);
    position:absolute;
    border:1px solid #333333;
    top:20rpx;
    bottom:10px;
    /* left:8%;
    right:14%; */
}
.inside-text-view {
    background: rgba(0,0,0,0);
    padding: 20px;
    margin-left: 10%;
    padding-bottom: 60rpx;
    min-height: 300rpx;
    margin-right: 12%;
}
