/* pages/celebration/celebrationShowMore.wxss */

@import '../../utils/weSwiper/weSwiper.wxss';

page {
  height: 100%;
  width: 100%;
}
.body {
    background-color: white; 
    width: 100%;
    height: 100%; 
}

.weui-tab__panel {
  /* margin-top: 45px;   */
  background-color: white;
  padding-top: 90rpx;
}

.weui-tab__content {
  /* height: 100%;   */
  border-top-style: none;  
  margin-bottom: 80rpx;
  padding-top: 16rpx;
}
.weui-navbar {
  border-bottom: 1px solid #DDDDDD;
  position: fixed;
  background-color: white;
  font-size: 32rpx;
}
.weui-navbar__item {
  border-right: 1px #DDDDDD solid;
  padding: 0; 
}
.weui-navbar__item.weui-bar__item_on {
  color: #F15A4A;
}
.weui-navbar__slider {
  background-color: #F15A4A;
  height: 1px;
  width: 4em;
  margin-left: 2.9em;
}
.weui-navbar__title {
  padding: 15rpx;
}
.weui-navbar__title.weui-bar__item_on {
  border-bottom: 1px #F15A4A solid;
}


.imgList-view { 
    background-color: white;
    padding: 20rpx;
    /* height: 100%; */
}
.title {
    margin-bottom: 20rpx;
}
.img {
  width: 100%;
}
.img image{ 
    width: 48.5%;
    height: 200rpx;
    margin-bottom: 20rpx;
    border: 1px #f5f5f5 solid;
}

.showPic {
    background-color: #000000; 
    height: 100%;
    width: 100%;
    color: white;
    position: fixed;
}

.hiddenPic {
    float: right;
    color: white;
}

.swiper {
    width: 100%;
    height: 90%;
    background-color: black;
}
.video {
    width: 100%;
    height: 50%; 
}

.pic {
    width: 100%;
    height: 80%; 
}


/* 视频 */
.videoList-view { 
    background-color: white;
    padding: 20rpx;
}

.video-view {
    position: relative;
    width: 48.5%;
    height: 200rpx;
    margin-bottom: 20rpx;
    border: 1px #f5f5f5 solid;
}
.video-preimg { 
    width: 100%;
    height: 100%;
    margin-bottom: 20rpx;
    position: absolute;
}

.show-video-icon {
    width: 80rpx;
    height: 80rpx;
    position: absolute;
    margin-top: 60rpx;
    margin-left: 37%; 
}
/* 浏览视频 */
.showVideo {
    background-color: #000000; 
    height: 100%; 
    width: 100%;
    color: white;
    position: fixed;
}
.we-wrapper {
    margin: auto;
    height: 100%;
}
.we-container {
    height: 85%;
}
.we-slide {
    height: 100%;
}
.numberText {
    font-size: 13px;
    padding: 2.5%;
    float: left;
    width: 95%;
    height: 5%;
}
.numberText text {
    font-size: 15px;
}
.hiddenVideo {
    float: right;
    color: white;
}

.foot-view {
    text-align: left;
    padding-left: 2.5%;
    color: white;
    height: 10%;
    background-color: #000000;
    position: absolute;
    bottom: 0;
}
