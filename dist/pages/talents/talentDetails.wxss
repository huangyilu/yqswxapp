/* pages/talents/talentDetails.wxss */

@import '../../templates/comment-item/comment-item.wxss';
@import '../../templates/scorestart/scorestart.wxss';

.detailsBody {
    height: 100%;
    width: 100%;
    /* margin-bottom: 200px;
    padding-bottom: 200px; */
    margin-bottom: 90rpx;
}
.head-title {
    width: 100%;
    height: 400rpx;
    display: block;
}
.title-bgimg {
    width: 100%; 
    height: 400rpx; 
    position: absolute; 
    z-index: 18;
}
.title-boder-view {
    width: 100%; 
    height: 400rpx;
    position: absolute; 
    z-index: 19;
    text-align: center;
}
.title-boder {
    width: 40%;
    border: 2px white solid;
    background-color: rgba(255, 255, 255, 0);
    padding: 40rpx 0; 
    text-align: center;
    color: white;
    margin: auto;
    margin-top: 100rpx;
}

.talent-info {
    width: 100%;
    height: 200rpx;
    background-color: #f5f5f5;
    padding-bottom: 10rpx;
}
.info-text {
    font-size: 26rpx;
    display: inline-block;
}
.avatar {
    width: 130rpx;
    height: 130rpx;
    border-radius: 50%;
    margin: 20rpx;
    margin-top: 30rpx;
}
.comparison-view {
    /* float: right; */
}
.comparison {
    width: 100rpx;
    padding: 10rpx 30rpx;
    border-radius: 20rpx;
    background-color: #F15A4A;
    color: white;
    text-align: center;
    margin-top: 20rpx; 
    margin-right: 20rpx; 
    font-size: 28rpx;
}
.header-start-icon {
    /* float: right; */
}
.header-start-icon image{
    width: 35rpx;
    height: 35rpx;
    margin-right: 5rpx; 
    float: left;
}

/* 选择时间 */
.talent-time {
  margin-bottom: 20rpx;
}
.left-text {
  font-size: 30rpx;
}
.talent-time-content {
    font-size: 28rpx;
    background-color: white;
    padding-bottom: 15rpx;
}
.talent-time-content view {
    margin-left: 70rpx;
    padding: 15rpx 0 0;
}
.talent-time-item text{
    margin-right: 40rpx;
    color: #999999;
}
.talent-time-icon image{
    width: 24rpx;
    height: 24rpx;
    float: left;
    margin-top: 8rpx;
    margin-right: 10rpx;
}
.talent-time-icon text {
    font-size: 24rpx;
    color: #999999;
}

/* 个人简介 */
.talent-desc {
    background-color: white;
    margin-bottom: 20rpx;
}
.desc-rich-view {
    padding: 20rpx;
    color: #999999;
    font-size: 24rpx;
}

/* 个人作品 */
.talent-works {
    background-color: white;
    margin-bottom: 20rpx;
}
.works {
    background-color: white;
    padding: 10rpx 0;
}
.works-title {
    border-left: 3px #F15A4A solid;
    margin: 10rpx 0;
    margin-left: 60rpx;
    margin-right: 30rpx;
    font-size: 28rpx;
}
.works-img {
    margin-left: 60rpx;
    padding: 10rpx 0;
}
.works-img .image{
    width: 25%;
    height: 120rpx;
    margin-right: 30rpx;
    border: 1px #f5f5f5 solid;
}
.works-img .video-icon {
    position: absolute;
    margin: auto;
    width: 30rpx;
    height: 30rpx;
}

/* 评论 */
.edit-img {
  float: right;
  width: 44rpx;
  height: 44rpx;
  margin-top: 5rpx;
}
.comment-view {
  margin-bottom: 20rpx;
}

/* 电话预约 */
.appointment {
    width: 100%;
    text-align: center;
    background-color: white;
    bottom: 0;
    border: 1px #f5f5f5 solid;
    color: black;
    font-size: 30rpx;
}
.phonecall {
    display: inline-block;
    width: 50%;
    padding: 20rpx 0;
}
.phonecall image {
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    margin-top: 6rpx;
    margin-left: -60rpx;
}
.appointment-btn {
    display: inline-block;
    width: 50%;
    background-color: #F15A4A;
    color: white;
    padding: 20rpx 0;
}
.notAppointment-btn {
    display: inline-blok;
    width: 50%;
    background-color: #BEBEBE;
    color: white;
    padding: 20rpx 0;
}

.show-video-icon {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    margin-top: -80rpx;
    margin-left: 9%;
}

.pack-up {
    padding: 20rpx 0;
}

/* 选时间 弹窗 */
.select-time-picker-bgview {
    width: 100%;
    height: 100%;
    background-color: rgba(1,1,1,0.6);
    position: fixed;
    bottom: 0;
    z-index: 100;
}
.select-time-view {
    bottom: 0;
    width: 100%;
    background-color: white;
    height: 40%;
    position: fixed;
}
.select-time-view .title-view {
    background-color: #F15A4A;
    height: 80rpx;
    font-size: 32rpx;
    color: white;
}
.select-time-view .title-view view {
    text-align: center;
    margin: 20rpx;
}
.time-picker-column-view {
    height: 80rpx;
    color: #F15A4A;
}
.time-picker-bgview picker-view-column view {
    line-height: 80rpx;
    text-align: center;
}
.time-picker-bgview picker-view {
    width: 100%;
    height: 350rpx;
    margin: 20rpx 0;
    font-size: 30rpx;
}