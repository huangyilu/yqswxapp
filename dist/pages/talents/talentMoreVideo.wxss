/* pages/talents/talentMoreVideo.wxss */
@import '../../utils/weSwiper/weSwiper.wxss';

page {
  height: 100%;
  width: 100%;
}
.body {
    width: 100%;
    height: 100%;
    /* background-color: #000000; */
    font-size: 30rpx;
}

.videoList-view { 
    background-color: white;
    padding: 20rpx;
    height: 100%;
}
.title {
    margin-bottom: 20rpx;
}

.video-view {
    position: relative;
    width: 48.5%;
    height: 200rpx;
    margin-bottom: 20rpx;
    border: 1px #f5f5f5 solid;
}
.video-preimg { 
    width: 100%;
    height: 100%;
    margin-bottom: 20rpx;
    position: absolute;
}

.show-video-icon {
    width: 80rpx;
    height: 80rpx;
    position: absolute;
    margin-top: 60rpx;
    margin-left: 37%; 
}

/* 浏览视频 */
.showVideo {
    background-color: #000000; 
    height: 100%; 
    width: 100%;
    color: white;
    position: fixed;
}
.we-wrapper {
    margin: auto;
}
.we-container {
    height: 85%;
}
.numberText {
    font-size: 13px;
    padding: 2.5%;
    float: left;
    width: 95%;
    height: 5%;
}
.numberText text {
    font-size: 15px;
}
.hiddenVideo {
    float: right;
    color: white;
}

.foot-view {
    text-align: left;
    padding-left: 20rpx;
    color: white;
    height: 10%;
    position: absolute;
    bottom: 0;
}

.swiper {
    width: 100%;
    height: 80%;
    background-color: black;
}
.video {
    width: 100%;
    height: 50%; 
}



