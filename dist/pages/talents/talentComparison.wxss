/* pages/talents/talentComparison.wxss */
@import '../../utils/weSwiper/weSwiper.wxss';

page {
  height: 100%;
}
.body {
  height: 100%;
}
.compList-view {
  height: 100%;
}
.panel {
    width: 44.5%;
    background-color: white;
    padding: 20rpx;
    display: inline-block;
}
.panel-title {
    text-align: center;
}
.panel-title .identity {
    margin-left: 20rpx;
    font-size: 32rpx;
    color: #333333;
}
.panel-title .avatar {
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
}
.header-start-icon {
    display: inline-block; 
    margin-left: 10rpx; 
}
.header-start-icon image{
    width: 28rpx;
    height: 28rpx;
    margin-right: 10rpx;
    float: left;
    margin-top: 20rpx;
}
.header-start-icon text{
    height: 26rpx;
    font-size: 13px;
    color: rgba(153,153,153,1);
    line-height: 26rpx;
    margin-left: 20rpx;
    margin-top: -20rpx; 
    display: inline-block;
}
.style-btn {
    font-size: 30rpx;
    color: #666666;
    border: 1px #D3AA6A solid;
    border-radius: 20rpx;
    padding: 0 25rpx;
    display: inline-block;
    margin-right: 15rpx;
    text-align: center;
}
.show-img {
    width: 100%;
    height: 200rpx; 
}
.show-video-icon {
    width: 80rpx;
    height: 80rpx;
    position: absolute;
    margin-top: -140rpx;
    margin-left: 16%;
}

.comment .content{
    border-bottom: 1px #dddddd solid;
    padding: 20rpx 0;
}
.comment-avatar {
    width: 60rpx;
    height: 60rpx;
    border-radius: 15rpx;
    float: left;
}
.comment-username {
    margin-left: 20rpx; 
    color: #999999;
    font-size: 30rpx;
}

/* 通用 title */
.title {
    color: #666666;
    border-left: 3px #FF0040 solid;
    margin: 20rpx 0;
    font-size: 30rpx;
    height: 35rpx;
}
.title text {
    margin-left: 15rpx;
}


/* 浏览视频 */
.showVideo {
    background-color: #000000; 
    height: 100%; 
    width: 100%;
    color: white;
}
.we-wrapper {
    margin: auto;
}
.we-container {
    height: 85%;
}
.numberText {
    font-size: 13px;
    padding: 2.5%;
    float: left;
    width: 95%;
    height: 5%;
}
.numberText text {
    font-size: 15px;
}
.hiddenVideo {
    float: right;
    color: white;
}

.foot-view {
    text-align: left;
    padding-left: 20rpx;
    color: white;
    height: 5%;
}

.swiper {
    width: 100%;
    height: 100%;
    background-color: black;
}
.video {
    width: 100%;
    height: 50%; 
}