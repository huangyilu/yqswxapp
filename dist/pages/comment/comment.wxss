/* pages/comment/comment.wxss */

page {
  width: 100%;
  height: 100%;
}
.body {
  height: 100%;
}
.comment-view {
  width: 100%;
  background-color: white;
  padding-bottom: 20rpx;
}
.comment-cell {
  background-color: white;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
  border-top: 1px #dddddd solid;
  border-bottom: 1px #dddddd solid;
  font-size: 34rpx;
}
.body-title {
  padding: 10rpx 20rpx;
  background-color: white;
  border-top: 1rpx #dddddd solid;
  border-bottom: 1rpx #dddddd solid; 
  margin: 20rpx 0;
  font-size: 34rpx;
}
.name-view .start-view{
  display: inline-block;
  margin-left: 20rpx;
}
.name-view text {
  float: left;
}
.name-view {
  background-color: white;
  padding: 10rpx 20rpx;
}
.textarea-view {
    padding: 20rpx;
    background-color: white;
    border-top: 1px #f5f5f5 solid;
    font-size: 32rpx;
}
.textarea-view textarea {
    height: 200rpx;
}

.upload-img-view {
    width: 100%;
    /* background-color: pink; */
    padding: 0 1%;
    height: auto; 
}
.uploadimg-boder {
    margin-left: 1%;
    margin-right: 1%; 
    margin-bottom: 20rpx;
    float: left; 
}
.uploadimg {
    width: 100%;
    height: 100%;
    float: left;
}

.upload-btn {
    background-color: #f5f5f5;
    text-align: center;
    color: #999999;
    font-size: 13px;
    border: 1rpx #dddddd solid;
    float: left; 
    margin-left: 1.25%;
    margin-right: 1.25%;
}
.icon {
    width: 35%;
    height: 35%;
    margin-top: 30rpx;
}

/* 评分 */
.scoring-view {
    background-color: white;
    text-align: center;
    padding: 20rpx;
    margin-top: 20rpx;
    border-top: 1px #f5f5f5 solid;
    border-bottom: 1px #f5f5f5 solid;
}
.scoring-view .title {
    text-align: left; 
    border-bottom: 1px #f5f5f5 solid;
    margin-bottom: 20rpx;
    padding-bottom: 20rpx; 
}
.scoring-item {
    width: 60%;
    margin: 0 20% 30rpx 20%;
}
.startIcon {
    width: 40rpx;
    height: 40rpx;
    margin-top: 5rpx; 
    float: right;  
    margin-left: 2px; 
}

/* 发表 */
.commit-btn {
    width: 60%;
    background-color: #F15A4A;
    border-radius: 20rpx;
    margin: auto;
    color: white;
    text-align: center;
    padding: 10rpx;
    margin-top: 40rpx;
}

/* 婚礼人才 */
.talent-view {
    border-top: 1px #f5f5f5 solid;
    padding-top:20rpx;
    margin-top:20rpx;
}