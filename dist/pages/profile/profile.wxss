/* profile.wxss */
page {
  height: 100%;
  width: 100%;
}
.profile-body {
    width: 100%;
    height: 100%;
}
/*头像 昵称*/
.userinfo {
    width: 100%;
    height: 30%;
    background-size:100% 100%;
    background-origin:content-box;
    background-repeat:no-repeat;
}
.userinfo-bg_view {
    display: flex; 
    flex-direction: column;
    align-items: center;
    width: 100%;
    height: 100%;  
    text-align: center; 
}
.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    border-radius: 50%;
    border: 1px #A9A9A9 solid;  
    margin: auto;
    margin-top: -10rpx;
}
.userinfo-nickname {
    color: white;
    margin: auto;
    width: 100%;
    margin-top: -60rpx;
}
/* 我的消息 */
.message-view {
  width:50rpx;
  height:50rpx;
  float:right;
  margin-left:auto;
  margin-right:20rpx;
  margin-top: 20rpx;
}

.profile-list-view {
    margin-top: 20rpx;
    border-top: 1px #f1f1f1 solid;
}
.profile-list-item {
    padding: 10rpx 20rpx;
    border-bottom: 1px #f1f1f1 solid;
}