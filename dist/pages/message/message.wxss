
.message-body {
    width: 100%;
    background-color: white;
}
.message-panel {
    padding: 20rpx;
    border-bottom: 1px solid #f5f5f5;
}
.message-panel .text {
    overflow:hidden;
    display:-webkit-box;
    -webkit-box-orient:vertical;
    -webkit-line-clamp:1;
    margin-bottom: 20rpx;
}
.message-panel .time {
    width: 100%;
    text-align: right;
}
