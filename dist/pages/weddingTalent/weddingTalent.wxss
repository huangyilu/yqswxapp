/* pages/weddingTalent/weddingTalent.wxss */

@import '../../templates/dishes-item/dishes-item.wxss';
@import '../../templates/talent-item/talent-item.wxss';
@import '../../templates/celebration-item/celebration-item.wxss';

.weui-tab__panel {
  margin-top: 45px;  
  background-color: white;
  padding-top: 0;
}
.weui-tab__content {
  height: 100%;  
  border-top: 1px #DDDDDD solid; 
  margin-bottom: 80rpx;
}
.weui-navbar {
  border-bottom: 1px solid #DDDDDD;
  position: fixed;
  background-color: white;
  font-size: 32rpx;
}
.weui-navbar__item {
  border-right: 1px #DDDDDD solid;
  padding: 0; 
}
.weui-navbar__item.weui-bar__item_on {
  color: #F15A4A;
}
.weui-navbar__slider {
  background-color: #F15A4A;
  height: 1px;
  width: 4em;
  margin-left: 2.9em;
}
.weui-navbar__title {
  padding: 15rpx;
}
.weui-navbar__title.weui-bar__item_on {
  border-bottom: 1px #F15A4A solid;
}


/* 结算 */
.settlement-view {
  background-color: white;
  border: 1px #DDDDDD solid;
  text-align: right;
  line-height: 80rpx;
  height: 80rpx;
  bottom: 0;
  color: black;
}
.settlement-btn {
  background-color: #F15A4A;
  color: white;
  float: right; 
  padding: 0 40rpx;
  margin-left: 20rpx;
}
.settlement-view .price {
  display: inline-block;
  color: #FF0000;
  font-size: 30rpx;
  text-align: right;
}

/* 查看更多 */
.foot-more-view {
  width: 100%;
  line-height: 80rpx;
  text-align: center;
  background-color: #f5f5f5;
  color: gray;
  float: right;
}

/* 购物车 */
.shopping-car-view {
  float:right;
  padding:10rpx 40rpx;
  border-left: 1px #f5f5f5 solid;
  margin-left: 20rpx;
}
.shopping-car {
  width: 60rpx;
  height: 60rpx;
}
.number-icon {
  width: 30rpx;
  height: 30rpx;
  background-color: #F15A4A;
  color: white;
  float: right;
  border-radius: 50%;
  line-height: 30rpx;
  text-align: center;
  font-size: 27rpx;
}