/* pages/shoppingCar/shoppingCar.wxss */

.body {
    margin-bottom: 120rpx;
}
/* 订单管理 删除按钮*/
.delete-button {
    float: right; 
    width: 100rpx;
    padding: 0 10rpx;
    color: #F15A4A;
    border: 1px #F15A4A solid;
    border-radius: 30rpx;
    text-align: center;
    font-size: 28rpx;
    margin-right: 30rpx;
}
/* 订单头部 */
.title text {
    font-size:28rpx;
    margin-top:5rpx;
}
.history-cell .title {
    padding: 10rpx 20rpx;
    background-color: white;
    border-top: 1px #f1f1f1 solid;
    border-bottom: 1px #f1f1f1 solid;
    font-size: 30rpx;
    margin-top: 20rpx;
    height: 50rpx;
}


/* 订单cell */
.payment-cell .cellImg {
  width: 125rpx;
  height: 125rpx;
  margin-right: 10rpx;
  margin-left: 5rpx;
  position: absolute;
}
.payment-cell {
  background-color: white;
  width: 95%;
  padding: 2.5%;
  position:relative;
  /* border-top: 1px #f5f5f5 solid; */
  border-bottom: 1px #f5f5f5 solid;
  height: 130rpx;
  font-size: 30rpx;
}
.payment-cell .text {
  display: inline-block; 
  width: 68%;  
  padding-left: 220rpx;
}
.payment-cell .text .name image{
  width: 35rpx;
  height: 35rpx;
  float: right;
  margin-top: 10rpx;
}
.checkbox {
    position: absolute;  
    margin-top: -5rpx; 
    zoom: 70%;
}
.payment-cell .cellImg {
    margin-left: 70rpx;
}


/* 结算 */
.settlement-view {
  background-color: white;
  border-top: 1rpx #E5E5E5 solid; 
  border-bottom: 1rpx #E5E5E5 solid;
  text-align: right;
  line-height: 100rpx;
  height: 100rpx; 
  bottom: 0;
  color: black;
  font-size: 30rpx;
}
.settlement-btn {
  background-color: #F15A4A;
  color: white;
  padding: 0 60rpx;
  margin-left: 20rpx;  
}
.not-settlement-btn {
  background-color: #e5e5e5;
  color: white;
  padding: 0 60rpx;
  margin-left: 20rpx;
}
.settlement-view .price {
  display: inline-block;
  color: #FF0000;
  text-align: right; 
}
.price-text {
  height: 50rpx;
  font-size:24rpx;
  color:#333;
  line-height: 50rpx;
}
.preprice-text {
  font-size: 26rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: right;
}
.settlement-checkbox {
   float: left; 
   margin-left: 20rpx;
   margin-top: -2rpx;
}
.settlement-checkbox checkbox {
    zoom: 70%;
}

/* 编辑 */
.edit-view {
    display: inline-block;
    width: 65%;  
    padding-left: 240rpx;
}
.edit-left {
    width: 60%;
    display:inline-block;
    text-align: center;
}
.edit-symbol {
    padding: 5rpx 15rpx;
    border: 1rpx #f1f1f1 solid;
    margin: 0 5rpx;
    font-size: 14px;
    /* color: #666666; */
}
.edit-right {
    width:40%;
    background-color:orange;
    display:inline-block;
    height:150rpx;
    text-align: center;
    line-height: 150rpx;
    color:white;
}
.edit-symbol image {
    width: 30rpx;
    height: 30rpx;
    float:left;
    margin-top:8rpx;
}

.shopping-car-empty-view {
    width: 100%;
    height: 100rpx;
    text-align: center;
    color: #666666;
    font-size: 32rpx;
    padding: 20rpx;
}

.tableNum-view {
  float: right;
}
.choose-tables-btn {
    border:1px #F15A4A solid;
    border-radius:20px;
    font-size:32rpx;
    padding: 5rpx 20rpx;
    margin-right:20rpx;
}

.table-bg-view {
    width: 100%;
    height: 100%;
    background-color: rgba(1,1,1,0.6);
    position: fixed;
    bottom: 0;
    z-index: 10;
}
.table-view {
    width: 90%;
    background-color: white;
    border-radius: 10rpx;
    margin: 45% auto;
    padding: 20rpx 20rpx 0;
}

.table-title-view {
    text-align: center;
    padding: 10rpx;
}
.table-view .body-view {
    margin-bottom: 30rpx;
}

/* 温馨 提示 */
.shoppingtypes-view {
  width: 95%;
  padding: 30rpx 2.5% 20rpx;
  font-size: 26rpx;
  color: #666666;
}
.shoppingtypes-view text {
  color: #F15A4A;
}

.price{
    font-size: 24rpx;
}



/* 弹窗 */
.selectDate-bgview {
    width: 100%;
    height: 100%;
    background-color: rgba(1,1,1,0.6);
    position: fixed;
    bottom: 0;
    z-index: 10;
}
.datepicker-view {
    width: 90%;
    background-color: white;
    border-radius: 10rpx;
    margin: 10% auto;
    font-size: 30rpx;
}

.datepicker-view .title {
    padding: 20rpx 30rpx;
    font-size: 30rpx;
}
.datepicker-view .title input{
    border-bottom: 1px #E5E5E5 solid;
    display: inline-block;
    font-size: 30rpx;
}
.datepicker-view .title radio-group {
  display: inline-block;
}
.picker {
  margin-bottom: 30rpx;
}
.picker picker-view {
  width: 100%; 
  height: 150px;
}
.picker-btns {
  bottom: 0;
  margin-top: 20rpx;
  padding: 20rpx 0;
  border-top: 1px #f1f1f1 solid;
  text-align: center;
}
.picker-view {
	color:#FF7CA0;
	text-align: center;
}
