/**app.wxss**/
@import 'styles/weui.wxss';

page {
  width: 100%;
  /* height: 100%; */
  background-color: #f5f5f5;
  flex-direction: column;
  display: flex;
}

/* little-text */
.lit-text {
  color: rgba(153,153,153,1);
  font-size: 24rpx;
}

/* 自定义cell样式 */

/* img-text-title 图片文字 头部cell*/
.img-text-title {
    background-color: white;
    padding: 20rpx;
    border-bottom: 1px #f1f1f1 solid;
    border-top: 1px #f1f1f1 solid;
    font-size: 30rpx;
}
.img-text-title .icon {
    width: 30rpx;
    height: 30rpx;
    margin-right: 10rpx;
    float: left;
    margin-top: 5rpx;
}

/* 图片 标题 文字 cell */
.img-title-text-cell {
    padding: 30rpx 20rpx;
    background-color: white;
    border-bottom: 1px #f1f1f1 solid;
    font-size: 32rpx;
}
.img-title-text-cell image {
    width: 40rpx;
    height: 40rpx;
    float: left;
    /* margin-top: 5rpx;   */
}
.img-title-text-cell .title {
    margin-left: 20rpx;
    margin-right: 20rpx;
}
/* 图片 标题 右箭头 */
.img-title-arrow-cell {
    padding: 0 20rpx;
    background-color: white;
    border-bottom: 1px #f1f1f1 solid;
    font-size: 28rpx;
    height: 70rpx;
}
.img-title-arrow-cell .left-icon {
    width: 30rpx;
    height: 30rpx;
    float: left;
    margin-top: 20rpx;  
}
.img-title-arrow-cell .right-icon {
    width: 30rpx;
    height: 30rpx;
    float: right;
    margin-top: 20rpx; 
}
.img-title-arrow-cell .left-text {
    float: left; 
    margin-top: 15rpx; 
    margin-left: 20rpx;
}
.img-title-arrow-cell .right-text {
    float: right;
    margin-top: 15rpx; 
    margin-right: 20rpx;
}
.img-title-arrow-cell view {
    padding: 30rpx 0;
}
 /* 标题 文字 向右箭头 cell */
.title-txt-arrow-cell {
    padding: 30rpx 20rpx;
    background-color: white;
    border-bottom: 1px #f1f1f1 solid;
    font-size: 32rpx;
    /* height: 100rpx; */
}
.title-txt-arrow-cell .title {
    float: left;
    color: black;
}
.title-txt-arrow-cell .text {
    font-size: 32rpx;
    color: rgba(153,153,153,1);
    margin-right: 10rpx;
}
.title-txt-arrow-cell .right-icon {
    width: 30rpx;
    height: 30rpx;
    float: right;
    margin-top: 20rpx;
}
/* 标题 向右箭头 cell */
.title-arrow-cell {
    padding: 0 20rpx;
    background-color: white;
    border-bottom: 1px #f1f1f1 solid;
    font-size: 28rpx;
    height: 70rpx;
}
.title-arrow-cell .title {
    float: left; 
    /* color: black; */
    margin-top: 15rpx; 
    color: #666;
}  
.title-arrow-cell view {
    padding: 20rpx 0;
}
.title-arrow-cell .right-icon {
    width: 30rpx;
    height: 30rpx;
    float: right;
    margin-top: 20rpx;
}
/* 标题 cell 可带价钱 可不带*/
.title-cell {
    padding: 15rpx 20rpx;
    background-color: white;
    border-bottom: 1px #f1f1f1 solid;
    font-size: 30rpx;
}
.title-cell .price {
    float: right;
    color: #F15A4A;
}

/* 向右箭头 带字 */
.right-more {
    font-size: 13px;
    color: #666666;
    text-align: center;
}

/* 收起展开view */
.pack-up {
    text-align: center;
    padding: 20rpx 0 0;
    background-color: white;
    font-size: 26rpx;
}
.pack-up image {
    width: 30rpx;
    height: 30rpx;
    margin-left: 10rpx;
    margin-top: 9rpx;
    position: absolute;
}


/* 文字大小 */
.fs24 {
  font-size: 24rpx;
}
.fs28 {
  font-size: 28rpx;
}
.fs30 {
  font-size: 30rpx;
}
.fs32 {
  font-size: 32rpx;
}
.fs36 {
  font-size: 36rpx;
}

/* 颜色 */
/* cell下横线 颜色#f1f1f1  */
.boder-bottom-color {
  border-bottom: 1px #f1f1f1 solid;
}
.brown-color {
  color: #784344;
}
.pink-color {
  color: #ff629a;
}
.white-color {
  color: #fff;
}
/* 主 文字颜色 大小 */
.main-txt-color {
    color: #333333;
    font-size: 30rpx;
}
/* 副 文字颜色 */
.second-txt-color {
    color: #666666;
    font-size: 26rpx;
}
.third-txt-color {
    color: #999999;
    font-size: 24rpx;
}
/* 红色 标价 */
.price {
    color: #F15A4A;
    font-size: 24rpx;
}

/* 占位 footer 有个bug 用了之后真机上无法往上滑直到看到全部数据 */
.empty-view {
    height: 20px;
}

/* 无内容 提示 */
.remind-empty-view {
    color: #666666;
    font-size: 30rpx;
    text-align: center;
    padding: 20rpx;
}

/* 备注 提示 */
.remarks-view {
    margin: 10px;
    font-size: 26rpx;
    color: #999999;
    text-align: left;
    width: 100%;
    padding: 20rpx;
    background-color: rgba(245, 245, 245, 1);
}
.remarks-view text {
    margin-left: 40rpx;
}


/* float  */
.float-right {
  float: right;
}
.float-left {
  float: left;
}

/* text-align */
.txt-algn-left {
  text-align: left;
}
.txt-algn-right {
  text-align: right;
}
.txt-algn-center {
  text-align: center;
}

.margin-right-20rpx {
  margin-right: 20rpx;
}