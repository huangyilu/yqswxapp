
.leftTabs {
  width: 35%; 
  float: left;
}
.left-item {
  width: 94%;
  text-align: center;
  padding: 5rpx 1%;
  border-bottom: 1px #DDDDDD solid;
  border-right: 1px #DDDDDD solid;
  font-size: 30rpx;
  background-color: #f5f5f5;
}
.left-item-select {
  border-right-style: none;
  background-color: white;
}
.left-item-btn-select {
  border: 1px #F15A4A solid;
  border-radius: 7px;
  height: 20px;
  display: inline-block;
  padding: 2.5px 15px;
  overflow: hidden;
  margin-top: 15rpx;
}
.select-icon {
  width: 15px;
  height: 15px;
  margin-top: 8px;    
  margin-right: -16px;   
  float: right;  
}
.select-txt {
  float: left;
}

.rightScroll {
  width: 65%; 
  height: 100%;
  float: right;
  background-color: white;
}
.right-item {
  padding: 20rpx;
  border-bottom: 1px #DDDDDD solid; 
}
.rightScroll .avatar {
  display: inline-block;
  margin-right: 10px;
}
.rightScroll .avatar image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 15%;
}
.rightScroll .info {
  display: inline-block;
  font-size: 30rpx;
}

.rightScroll .price {
  display: inline-block;
  color: #FF0000;
  float: right;
  font-size: 28rpx;
  text-align: right;
}
.selectBtn {
  height: 40rpx;
  width: 100rpx;
  padding: 6rpx 24rpx;
  background-color: #D3AA6A;
  color: white;
  border: 1px #D3AA6A solid;
  border-radius: 14rpx;
  text-align: center;
  line-height: 40rpx;
  font-size: 28rpx;
  margin-top: 30rpx;
}
.selectedBtn {
  height: 40rpx;
  width: 100rpx;
  padding: 6rpx 24rpx;
  background-color: white;
  color: #D3AA6A;
  border: 1px #D3AA6A solid;
  border-radius: 14rpx;
  text-align: center;
  line-height: 40rpx;
  font-size: 28rpx;
  margin-top: 30rpx;
}
.notOptional-btn {
  height: 40rpx;
  width: 100rpx;
  padding: 6rpx 24rpx;
  background-color: white;
  color: #DDDDDD;
  border: 1px #DDDDDD solid;
  border-radius: 14rpx;
  text-align: center;
  line-height: 40rpx;
  font-size: 13px;
  margin-top: 30rpx;
}

.none {
  border-style: none;
}