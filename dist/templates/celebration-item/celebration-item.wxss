
/* 婚礼人才 */
.celebration-scroll-h-item {
  width: 43%;
  background-color: white;
  padding: 20rpx;
  display: inline-block;
  border: 1px #E5E5E5 solid;
  margin-bottom: 20rpx;
  font-size: 30rpx;
}
.celebration-scroll-h-item .bg-img {
  width: 100%;
  height: 250rpx;
}
.celebration-scroll-h-item .text-view {
  width: 100%;
  height: 45rpx;
  font-size: 26rpx;
}
.celebration-scroll-h-item .text-view .left-text {
  overflow: hidden; 
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:1;
}
.celebration-scroll-h-item .text-view .right-text {
  margin-left: 20rpx;
  font-size: 26rpx;
  color: #F15A4A;
}
.celebration-scroll-h-item .style-view {
  margin: 10rpx 0;
}
.celebration-scroll-h-item .style-view .style-icon {
  border: 1px #d3aa6a solid;
  color: #666;
  padding: 6rpx 15rpx;
  font-size: 24rpx;
  border-radius: 30rpx;
}
