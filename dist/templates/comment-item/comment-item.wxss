
.comment-item {
    background-color: white;
    width: 95%;
    border-bottom: 1px #f5f5f5 solid;
    padding: 0 2.5%;
} 
.comment-item .avatar {
    width: 100rpx;
    height: 100rpx;
    border-radius: 15%;
    /* float: left; */
    margin-top: 25rpx;
    margin-right: 20rpx;
    border: 1px #f5f5f5 solid;
}
.comment-item .comment-text {
    padding-top: 30rpx;
    padding-bottom: 30rpx;
    font-size: 30rpx;
}
.comment-item .comment-text-desc {
    overflow:hidden;
    display:-webkit-box;
    -webkit-box-orient:vertical;
    -webkit-line-clamp:3;
}
