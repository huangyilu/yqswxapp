
/* 向下展开 */
.weui-flex {
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.weui-cells {
  margin-top: 0;
  opacity: 0;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  -webkit-transition: .3s;
  transition: .3s;
}
.weui-cells:before,
.weui-cells:after {
  display: none;
}
.weui-cells_show {
  opacity: 1;
  -webkit-transform: translateY(0);
          transform: translateY(0);
}
.weui-cell:before {
  right: 15px;
}
.kind-list__item {
  margin: 10px 0;
  background-color: #FFFFFF;
  border-radius: 2px;
  overflow: hidden;
  font-size: 30rpx;
}
.kind-list__item:first-child {
  margin-top: 0;
}
.kind-list__img {
  width: 32rpx;
  height: 32rpx;
  transition: transform .4s;
}

.kind-list-title__img {
  width: 125rpx;
  height: 125rpx;
  margin-right: 20rpx;
}
.kind-list-title__text {
  margin-right: 20rpx;
}

.kind-list__item-hd {
  padding: 20rpx;
  -webkit-transition: opacity .3s;
  transition: opacity .3s;
}
.kind-list__item-hd_show {
  opacity: .4;
  border-bottom: 1px #f5f5f5 solid;
}
.kind-list__item-bd {
  height: 0;
  overflow: hidden;
}
.kind-list__item-bd_show {
  height: auto;
  border-bottom: 1px #f1f1f1 solid;
}

/* 预约单 */
.inside-cell {
  background-color: white;
  width: 95%;
  padding: 2.5%;
  position:relative;
  border-bottom: 1px #f5f5f5 solid;
}
.cellImg {
  width: 125rpx;
  height: 125rpx;
  margin-right: 10rpx;
  position: absolute;
}
.inside-cell .text {
  display: inline-block;
  width: 75%;  
  padding-left: 170rpx;
  font-size: 30rpx;
}

/* 按钮 */
.price-cell-view {
  background-color: white;
  font-size: 30rpx;
  text-align: right;
  padding: 2.5%;
  border-bottom: 1px #f5f5f5 solid;
}

.price-cell-view .price-p {
  color: #F15A4A;
}
.price-cell-view view {
  display: inline-block;
  border-radius: 30rpx;
  color: #F15A4A;
  padding: 0 25rpx;
  border: 1px #F15A4A solid;
  margin-left: 20rpx;
}
.price-cell-view .cancel-cell-btn {
  color: #999;
  border: 1px #999 solid;
}
